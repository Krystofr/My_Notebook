<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.krystofrapp.mynotebook.EditNoteActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/edit_note_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme" />

    <EditText
        android:layout_below="@id/edit_note_activity_toolbar"
        android:id="@+id/input_note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:ems="10"
        android:hint="@string/whats_in_your_mind"
        android:gravity="top"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:inputType="textMultiLine"
        android:paddingEnd="12dp"
        android:background="@android:color/white"
        android:paddingStart="20dp"
        android:textColor="@color/colorPrimaryDark_dark"
        android:paddingTop="18dp"
        tools:text="@tools:sample/lorem/random"

        />
</RelativeLayout>
